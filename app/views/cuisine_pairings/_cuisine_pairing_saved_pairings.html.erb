<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Saved Pairings

    <a data-toggle="collapse" href="#cuisine_pairing_saved_pairings_new_form">
      Add saved pairing
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @cuisine_pairing.saved_pairings.each do |saved_pairing| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to saved_pairing, saved_pairing %>

        <% if current_user == saved_pairing.user %>
          <%= link_to saved_pairing, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="cuisine_pairing_saved_pairings_new_form">
        <%= render partial: "cuisine_pairings/cuisine_pairing_saved_pairings_new_form" %>
      </div>
    </div>

  </ul>
</div>

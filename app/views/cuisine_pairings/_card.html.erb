<div class="card mb-3">
  <h2 class="card-header h4">
    Cuisine Pairing #<%= cuisine_pairing.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Cuisine</dt>
      <dd>
        <% if @cuisine_pairing.cuisine.present? %>
          <%= link_to cuisine_pairing.cuisine, cuisine_pairing.cuisine %>
        <% end %>
      </dd>

      <dt>Wine</dt>
      <dd>
        <% if @cuisine_pairing.wine.present? %>
          <%= link_to cuisine_pairing.wine, cuisine_pairing.wine %>
        <% end %>
      </dd>

      <dt>Description</dt>
      <dd><%= cuisine_pairing.description %></dd>

      <dt>Share link</dt>
      <dd><%= cuisine_pairing.share_link %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back cuisine_pairing, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_cuisine_pairing_url(cuisine_pairing), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to cuisine_pairing, method: :delete, data: { confirm: "Do you really want to delete this cuisine_pairing?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(cuisine_pairing.updated_at) %> ago
  </div>
</div>

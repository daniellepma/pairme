<!-- Form cuisine_pairing start -->
<%= form_with(model: @cuisine_pairing, local: true) do |f| %>
<!-- Form cuisine_pairing end -->

  <!-- Label and input for cuisine_id start -->
  <!-- Input for cuisine_id start -->
  <%= f.hidden_field :cuisine_id, value: @cuisine.id %>
  <!-- Input for cuisine_id end -->
  <!-- Label and input for cuisine_id end -->

  <!-- Label and input for wine_id start -->
  <div class="form-group">
    <%= f.label :wine_id %>

    <!-- Input for wine_id start -->
    <%= f.collection_select :wine_id, Wine.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for wine_id end -->
  </div>
  <!-- Label and input for wine_id end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>

    <!-- Input for description start -->
    <%= f.text_field :description, class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for share_link start -->
  <div class="form-group">
    <%= f.label :share_link %>

    <!-- Input for share_link start -->
    <%= f.text_field :share_link, class: "form-control" %>
    <!-- Input for share_link end -->
  </div>
  <!-- Label and input for share_link end -->

  <%= f.submit "Create cuisine pairing", class: "btn btn-block btn-outline-secondary" %>
<% end %>

<%= form_with(model: @saved_pairing, local: true) do |f| %>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :pairing_id %>

    <%= f.collection_select :pairing_id, CuisinePairing.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.submit "Create saved pairing", class: "btn btn-block btn-outline-secondary" %>
<% end %>

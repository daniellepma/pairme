<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Dish Pairings

    <a data-toggle="collapse" href="#wine_dish_pairings_new_form">
      Add dish pairing
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @wine.dish_pairings.each do |dish_pairing| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to dish_pairing, dish_pairing %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to dish_pairing, method: :delete, data: { confirm: "Do you really want to delete this dish_pairing" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="wine_dish_pairings_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>

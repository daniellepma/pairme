<!-- Form dish_pairing start -->
<%= form_with(model: @dish_pairing, local: true) do |f| %>
<!-- Form dish_pairing end -->

  <!-- Label and input for dish_id start -->
  <div class="form-group">
    <%= f.label :dish_id %>

    <!-- Input for dish_id start -->
    <%= f.text_field :dish_id, class: "form-control" %>
    <!-- Input for dish_id end -->
  </div>
  <!-- Label and input for dish_id end -->

  <!-- Label and input for wine_id start -->
  <!-- Input for wine_id start -->
  <%= f.hidden_field :wine_id, value: @wine.id %>
  <!-- Input for wine_id end -->
  <!-- Label and input for wine_id end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>

    <!-- Input for description start -->
    <%= f.text_field :description, class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for share_link start -->
  <div class="form-group">
    <%= f.label :share_link %>

    <!-- Input for share_link start -->
    <%= f.text_field :share_link, class: "form-control" %>
    <!-- Input for share_link end -->
  </div>
  <!-- Label and input for share_link end -->

  <%= f.submit "Create dish pairing", class: "btn btn-block btn-outline-secondary" %>
<% end %>

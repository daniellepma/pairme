<%= form_with(model: @dish_pairing, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :dish_id %>

    <%= f.collection_select :dish_id, Dish.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :wine_id, value: @wine.id %>

  <div class="form-group">
    <%= f.label :description %>

    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :share_link %>

    <%= f.text_field :share_link, class: "form-control" %>
  </div>

  <%= f.submit "Create dish pairing", class: "btn btn-block btn-outline-secondary" %>
<% end %>
